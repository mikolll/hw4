<h1>New Place</h1>


<%= form_with :model => @place do |form| %>
<% if @current_user %>
<div class="mb-3">
  <p>
    <%= form.label "name", :class => "form-label" %>
    <%= form.text_field "name", :class => "form-control" %>
  </p>
  </div>

<% else %>
  Please <a href="/login">login</a> to add a new place.
<% end %>

  <p>
    <%= form.submit %>
  </p>
<% end %>


